    <header>
        <div class="container-fluid">
          <div class="row" >
            <div class="col-12 col-sm-6">
              <div class="row">
                  <div class="col-12 col-sm-3" >
                      <img  class="logo" style="max-width:6vw ;" class="img-fluid" src="../logo.jpeg">
                  </div>
                  
                      <div class="col-12 col-sm-9">
                          <h1 style="margin-top: 0;">FarmBee</h1>
                          <div class="row">
                              <div class="col-12">
                                  <h2 style="color:white; font-family: 'Times New Roman', Times, serif ;">Welcome to our portal</h2>
                              </div>
                          </div>
                      </div>
              </div>
          </div>
            <ul class="list-inline mb-2" style="margin-top: 2rem;">
              <li class="list-inline-item">
                <%if(!authenticated){%>
                <div class="dropdown">
                  <a id="success" style="color:#e9e5e5; text-decoration: none; margin-left: 25rem;" class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Signup
                  </a>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a id="success" class="dropdown-item" href="/farmer/signup">Farmer</a>
                    <a id="success" class="dropdown-item" href="/buyer/signup">Buyer</a>
                  </div>
                </div>
                <%}%>
              </li>
              <li class="list-inline-item">
                <%if(!authenticated){%>
                <div class="dropdown">
                  <a id="success" style="color:#e9e5e5;text-decoration: none; margin-left: 42px;" class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Login
                  </a>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a id="success" class="dropdown-item" href="/farmer/signin">Farmer</a>
                    <a id="success" class="dropdown-item" href="/buyer/signin">Buyer</a>
                  </div>
                </div>
                <%}%>
              </li>
              <%if(authenticated && authenticated.role==="farmer"){%>
                <%if(authenticated.kyc){%>
              <li class="list-inline-item">
                <a id="success" href="/farmer/getposts" style="color:#e9e5e5; text-decoration: none;margin-right: 1rem;">Your crops</a>
              </li>
              <li class="list-inline-item">
                <a id="success" href="/farmer/paymenthistory" style="color:#e9e5e5; text-decoration: none">Transactions</a>
              </li>
              <%}else {%>
                <li class="list-inline-item">
                  <a id="success" href="/farmer/kyc" style="color:#e9e5e5; text-decoration: none">Complete&nbsp;&nbsp;your&nbsp;&nbsp;KYC</a>
                </li>
                <%}%>
              <li class="list-inline-item" style="margin-left: 1rem;">
                <a id="success" href="/farmer/getstore" style="color:#e9e5e5; text-decoration: none;">Mandi</a>
              </li>
              <li class="list-inline-item" style="margin-left: 1rem;">
                <form action="/farmer/logout" method="post"><button id="danger" style="color:#e9e5e5; text-decoration: none;background: none; border: none; padding: 0; outline: 0;">Logout</button></form>
              </li>
                <%}%>
                <%if(authenticated && authenticated.role==="buyer"){%>

                  <li class="list-inline-item" style="margin-left: 8rem;">
                    <a id="success" href="/buyer/getstore" style="color:#e9e5e5; text-decoration: none;">Mandi</a>
                  </li>
                  <li class="list-inline-item" style="margin-left: 2rem;">
                    <a id="success" href="/buyer/orders" style="color:#e9e5e5; text-decoration: none;">Your orders</a>
                  </li>
                  <li class="list-inline-item" style="margin-left: 2rem;">
                    <form action="/buyer/logout" method="post"><button id="danger" style="color:#e9e5e5;text-decoration: none;background: none; border: none; padding: 0; outline: 0;">Logout</button></form>
                  </li>
                <%}%>
              </li>
              <li class="list-inline-item"style="margin-left: 1rem;">
                <%if(authenticated){%>
                  <p style="color: rgb(109, 207, 109);">Welcome&nbsp;&nbsp;<span class="username"><b><%=authenticated.username%></b><%if(authenticated.role==='farmer' && authenticated.kyc){%> <span style="position: relative; top: -8px; margin-left: 1px"class="badge badge-pill badge-success checked">verified&nbsp;&#10004;</span>
                  </span><%}%></p>
                <%}%>
              </li>
            </ul>
          </div>
